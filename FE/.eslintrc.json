{
  "root": true,
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
  // "parserOptions": {
  //   "ecmaFeatures": {
  //     "jsx": true
  //   },
  //   "ecmaVersion": "latest",
  //   "sourceType": "module"
  // },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": [
      "error",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ],
    "react/prop-types": 2
  }
}
